{
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "camelcase": "off",
    "class-methods-use-this": "off",
    "comma-dangle": ["error", "never"],
    "react/destructuring-assignment": ["off"],
    "import/extensions": 0,
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": 0,
    "jsx-a11y/no-static-element-interactions": "off",
    "max-len": 0,
    "no-continue": "off",
    "no-plusplus": "off",
    "no-nested-ternary": "off",
    "no-underscore-dangle": "off",
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-filename-extension": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-uses-react": 1,
    "react/no-array-index-key": "off",
    "react/no-did-mount-set-state": "off",
    "react/no-multi-comp": "off",
    "react/no-string-refs": "off",
    "react/no-unused-prop-types": "off",
    "react/prefer-stateless-function": "off",
    "react/prop-types": 0
  },
  "globals": {
    "__BUNDLE_START_TIME__": false,
    "__DEV__": true,
    "__dirname": false,
    "__filename": false,
    "__fbBatchedBridgeConfig": false,
    "alert": false,
    "cancelAnimationFrame": false,
    "clearImmediate": true,
    "clearInterval": false,
    "clearTimeout": false,
    "console": true,
    "document": false,
    "escape": false,
    "exports": false,
    "global": false,
    "jest": false,
    "pit": false,
    "Map": true,
    "module": false,
    "navigator": false,
    "process": false,
    "Promise": false,
    "requestAnimationFrame": true,
    "require": true,
    "Set": true,
    "setImmediate": true,
    "setInterval": false,
    "setTimeout": false,
    "window": false,
    "FormData": true,
    "XMLHttpRequest": false,

    "ReactElement": false,
    "ReactClass": false,
    "Class": false,

    "expect": true,
    "mock": true,
    "sandbox": true,
    "sinon": true,
    "spy": true,
    "stub": true,
    "useFakeServer": true,
    "useFakeTimers": true,
    "useFakeXMLHttpRequest": true
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
